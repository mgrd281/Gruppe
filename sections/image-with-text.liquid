{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif

  assign media_type = section.settings.media_type | default: 'image'
  assign poster = section.settings.cover_image

  if poster == blank
    if media_type == 'upload_video' and section.settings.video != null
      assign poster = section.settings.video.preview_image
    endif
  endif

  assign ratio_percent = 56.25
  case section.settings.media_aspect_ratio
    when 'portrait'
      assign ratio_percent = 125
    when 'square'
      assign ratio_percent = 100
    when 'landscape'
      assign ratio_percent = 56.25
    else
      if media_type == 'image' and section.settings.image != blank
        assign ratio_percent = 1 | divided_by: section.settings.image.aspect_ratio | times: 100
      elsif poster != blank
        assign ratio_percent = 1 | divided_by: poster.aspect_ratio | times: 100
      elsif media_type == 'upload_video' and section.settings.video != null
        assign ratio_percent = 1 | divided_by: section.settings.video.aspect_ratio | times: 100
      endif
  endcase

  assign external_video_id = section.settings.external_video_url.id
  assign upload_video_id = section.settings.video.id
  assign media_id = upload_video_id | default: external_video_id | default: section.id
-%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="page-width">
    <div class="image-with-text image-with-text--brand-story image-with-text--media-{{ section.settings.layout }} image-with-text--bg-{{ section.settings.background_style }} isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      <div class="image-with-text__editorial{% if section.settings.layout == 'text_first' %} image-with-text__editorial--reverse{% endif %}">
        <div class="image-with-text__media-item">
          <div class="image-with-text__media-shell" style="--ratio-percent: {{ ratio_percent }}%;">
            <div class="image-with-text__media-inner">
              {%- if media_type == 'image' -%}
                <div class="image-with-text__media media">
                  {%- if section.settings.image != blank -%}
                    {{
                      section.settings.image
                      | image_url: width: 2000
                      | image_tag: widths: '375, 550, 750, 1100, 1500, 2000', sizes: '100vw', fetchpriority: fetch_priority
                    }}
                  {%- else -%}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
              {%- else -%}
                <deferred-media
                  class="image-with-text__media deferred-media"
                  data-media-id="{{ media_id }}"
                  style="--ratio-percent: {{ ratio_percent }}%;"
                >
                  <button
                    id="Deferred-Poster-BrandStory-{{ media_id }}"
                    class="image-with-text__poster deferred-media__poster media"
                    type="button"
                    aria-label="Play video"
                  >
                    {%- if section.settings.enable_muted_preview and media_type == 'upload_video' and section.settings.video != null -%}
                      {{
                        section.settings.video
                        | video_tag:
                          image_size: '1100x',
                          autoplay: true,
                          loop: true,
                          controls: false,
                          muted: true
                      }}
                    {%- elsif poster != blank -%}
                      {{ poster | image_url: width: 2000 | image_tag: widths: '375, 550, 750, 1100, 1500, 2000', sizes: '100vw' }}
                    {%- else -%}
                      {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                    {%- endif -%}
                    <span class="deferred-media__poster-button motion-reduce">
                      <span class="svg-wrapper">
                        {{- 'icon-play.svg' | inline_asset_content -}}
                      </span>
                    </span>
                  </button>
                  <template>
                    {%- if media_type == 'external_video' and section.settings.external_video_url != null -%}
                      {%- liquid
                        assign loop = ''
                        if section.settings.enable_video_looping
                          assign loop = '&loop=1&playlist=' | append: external_video_id
                        endif
                      -%}
                      {%- if section.settings.external_video_url.type == 'youtube' -%}
                        <iframe
                          src="https://www.youtube.com/embed/{{ external_video_id }}?enablejsapi=1&autoplay=1{{ loop }}"
                          class="js-youtube"
                          allow="autoplay; encrypted-media"
                          allowfullscreen
                          title="{{ section.settings.external_video_url.id | escape }}"
                        ></iframe>
                      {%- else -%}
                        <iframe
                          src="https://player.vimeo.com/video/{{ external_video_id }}?autoplay=1{{ loop }}"
                          class="js-vimeo"
                          allow="autoplay; encrypted-media"
                          allowfullscreen
                          title="{{ section.settings.external_video_url.id | escape }}"
                        ></iframe>
                      {%- endif -%}
                    {%- else -%}
                      {{
                        section.settings.video
                        | video_tag:
                          image_size: '1100x',
                          autoplay: true,
                          loop: section.settings.enable_video_looping,
                          controls: true,
                          muted: false
                      }}
                    {%- endif -%}
                  </template>
                </deferred-media>
              {%- endif -%}

              {%- if section.settings.enable_overlay_gradient -%}
                <div class="image-with-text__overlay" aria-hidden="true"></div>
              {%- endif -%}
            </div>
          </div>
        </div>

        <div class="image-with-text__text-item">
          <div
            id="ImageWithText--{{ section.id }}"
            class="image-with-text__content image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }}"
          >
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'caption' -%}
                  {%- if block.settings.caption != blank -%}
                    <p class="image-with-text__label" {{ block.shopify_attributes }}>
                      {{ block.settings.caption | escape }}
                    </p>
                  {%- endif -%}
                {%- when 'heading' -%}
                  <h2 class="image-with-text__headline" {{ block.shopify_attributes }}>
                    {{ block.settings.heading }}
                  </h2>
                {%- when 'text' -%}
                  <div class="image-with-text__body rte" {{ block.shopify_attributes }}>
                    {{ block.settings.text }}
                  </div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

