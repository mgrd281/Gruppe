  <script>
    (() => {
      const root = document.currentScript && document.currentScript.closest('footer');
      if (!root) return;

      const mql = window.matchMedia('(max-width: 749px)');
      const accordions = Array.from(root.querySelectorAll('[data-bt-accordion]'));

      const setPanel = (btn, panel, open, immediate = false) => {
        btn.setAttribute('aria-expanded', open ? 'true' : 'false');

        if (immediate) {
          panel.style.transition = 'none';
        }

        if (open) {
          panel.hidden = false;
          const h = panel.scrollHeight;
          panel.style.maxHeight = h + 'px';
        } else {
          panel.style.maxHeight = '0px';
          window.setTimeout(() => {
            if (btn.getAttribute('aria-expanded') === 'false') panel.hidden = true;
          }, 260);
        }

        if (immediate) {
          panel.getBoundingClientRect();
          panel.style.transition = '';
        }
      };

      const setup = (isMobile) => {
        accordions.forEach((item) => {
          const btn = item.querySelector('.bt-footer__accordion-trigger');
          const panel = item.querySelector('.bt-footer__accordion-panel');
          if (!btn || !panel) return;

          if (!btn.dataset.btBound) {
            btn.dataset.btBound = 'true';
            btn.addEventListener('click', () => {
              if (!mql.matches) return;
              const open = btn.getAttribute('aria-expanded') === 'true';
              setPanel(btn, panel, !open);
            });
          }

          if (isMobile) {
            const open = btn.getAttribute('aria-expanded') === 'true';
            panel.hidden = !open;
            panel.style.maxHeight = open ? panel.scrollHeight + 'px' : '0px';
          } else {
            btn.setAttribute('aria-expanded', 'true');
            panel.hidden = false;
            panel.style.maxHeight = 'none';
          }
        });
      };

      setup(mql.matches);
      mql.addEventListener('change', (e) => setup(e.matches));
    })();
  </script>
