    assign has_social_icons = true
    if settings.social_instagram_link == blank and settings.social_facebook_link == blank and settings.social_tiktok_link == blank
      assign has_social_icons = false
    endif

    assign contact_name = section.settings.contact_name
    if contact_name == blank
      assign contact_name = '[BITTE EINTRAGEN]'
    endif
    assign contact_address = section.settings.contact_address
    if contact_address == blank
      assign contact_address = '[BITTE EINTRAGEN]'
    endif

    assign contact_email = section.settings.contact_email
    if contact_email == blank
      assign contact_email = '[BITTE EINTRAGEN]'
    endif
    assign contact_phone = section.settings.contact_phone
    if contact_phone == blank
      assign contact_phone = '[BITTE EINTRAGEN]'
    endif
    assign contact_city = section.settings.contact_city
    assign support_hours = section.settings.support_hours
    if support_hours == blank
      assign support_hours = '[BITTE EINTRAGEN]'
    endif

    assign contact_address_display = contact_address | escape | newline_to_br
  -%}

  <div class="footer__content-top page-width">
    <div class="bt-footer">
      <div class="bt-footer__grid" data-bt-footer>
        <div class="bt-footer__col bt-footer__col--newsletter">
          <h2 class="bt-footer__heading">{{ section.settings.newsletter_heading }}</h2>
          {%- if section.settings.newsletter_subtitle != blank -%}
            <div class="bt-footer__subheading rte">{{ section.settings.newsletter_subtitle }}</div>
          {%- endif -%}
          {%- if section.settings.newsletter_enable -%}
